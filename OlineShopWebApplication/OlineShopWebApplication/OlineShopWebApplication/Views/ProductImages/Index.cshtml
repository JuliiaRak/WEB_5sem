@model IEnumerable<OlineShopWebApplication.ProductImage>

@{
    ViewData["Title"] = "Зображення продуктів";
}

<h1>Зображення продуктів @ViewBag.ProductName</h1>

<p>
    <!-- <a asp-action="Create">Create New</a> -->
    @Html.ActionLink("Додати нове зображення продукта", "Create", new { productId = @ViewBag.ProductId})
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductImageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductImageId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductImageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductImageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductImageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
