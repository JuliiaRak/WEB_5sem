@model OlineShopWebApplication.ProductImage

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання зображення продукту @ViewBag.ProductName</h1>

<h4>ProductImage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <!-- <input asp-for="Image" class="form-control" /> -->
                <input type="file" id="Image" name="Image" asp-for="Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <!-- <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div> -->

            <input type="hidden" value="@ViewBag.ProductId" name="ProductId" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
